@model IEnumerable<Assg.Models.StudentModels.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cartItem in Model)
        {
            <tr>
                <td>
                    <strong>@cartItem.ChapterContentName</strong>
                    <p>@cartItem.ChapterContentDescription</p>
                </td>
                <td>@cartItem.ChapterContentPrice.ToString("C", new System.Globalization.CultureInfo("ms-MY"))</td>
                <td>
                    <form asp-action="RemoveFromCart" asp-controller="ChapterContent" method="post">
                        <input type="hidden" name="chapterContentId" value="@cartItem.ChapterContentId" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"><strong>Total:</strong></td>
            <td><strong>@Model.Sum(i => i.Subtotal).ToString("C", new System.Globalization.CultureInfo("ms-MY"))</strong></td>
        </tr>
        <tr>
            <td colspan="3" class="text-center">
                <form asp-action="Checkout" asp-controller="Payment" method="get">
                    <button type="submit" class="btn btn-success btn-lg">Checkout</button>
                </form>
            </td>
        </tr>
    </tfoot>
</table>
