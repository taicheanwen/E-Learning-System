@model Assg.Models.StudentModels.QuizQuestion

<h2>Quiz</h2>

<form method="post" asp-action="SubmitAnswers">
    <label>Your Name:</label>
    <input type="text" name="name" id="name" class="form-control" required />

    @foreach (var quiz in Model.questions)
    {
        <div class="question">
            <h4>@quiz.Question</h4>

            <input type="hidden" name="quizId" value="@Model.Id" />

            <label>Options:</label>
            @foreach (var option in quiz.Options)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answers[@quiz.Id].MultipleChoiceAnswer" value="@option" id="@option@quiz.Id" />
                    <label class="form-check-label" for="@option@quiz.Id">
                        @option
                    </label>
                </div>
            }
        </div>
    }

    <button type="submit" class="btn btn-primary">Submit Answers</button>
</form>
