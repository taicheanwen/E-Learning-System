@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Review Management";
}

<div class="container">
    <h2>Review Management</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Review ID</th>
                    <th>Review Rate</th>
                    <th>Review Text</th>
                    <th>Review Date</th>
                    <th>Payment ID</th>
                    <th>User ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.ReviewId</td>
                        <td>@review.ReviewRate</td>
                        <td>@review.ReviewText</td>
                        <td>@review.ReviewDate.ToString("dd MMM yyyy")</td>
                        <td>@review.PaymentId</td>
                        <td>@review.UserId</td>
                        <td>
                            <!-- delete button -->
                            <form method="post" asp-action="Delete" asp-controller="Review" asp-route-reviewId="@review.ReviewId" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No reviews available for this chapter content.</div>
    }
</div>
