@{
    ViewData["Title"] = "Report Management";
}

<h1>Report Management</h1>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function loadReport(sortField, sortOrder) {
        $.get('/Admin/ReportManagement', { sortField: sortField, sortOrder: sortOrder }, function(data) {
            $('body').html(data);
        });
    }
</script>

@{
    var fields = new[] { "Id", "Name", "Email", "Username" };
}

<h2>Total Enrolled Students</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            @foreach (var field in fields)
            {
                string direction = "asc";
                string currentClass = "";

                if (field == ViewBag.Sort)
                {
                    direction = ViewBag.Dir == "des" ? "asc" : "des";
                    currentClass = ViewBag.Dir;
                }

                <th>
                    <a href="?sort=@field&dir=@direction" class="@currentClass">@field</a>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Students != null)
        {
            foreach (var student in ViewBag.Students)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Username</td>
                </tr>
            }
        }
    </tbody>
</table>


